name: workflow test

# trigger on push
on: push

jobs:
    meterian_scan:
        name: Meterian client scan
        runs-on: ubuntu-latest
        steps: 
          - name: Scan project using meterian cli GitHub action
            uses: MeterianHQ/meterian-github-action@action-update
            env: 
                METERIAN_API_TOKEN: ${{ secrets.METERIAN_API_TOKEN }}
                TOKEN: ${{ secrets.TOKEN }} 
          # ** see what works better: parameter sent that becomes env var or env var set in the workflow **
            with: 
                cli_args: --project-url=tmp